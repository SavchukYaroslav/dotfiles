# Autocompletion for kubectl, CLI for Kubernetes
#
# Author: https://github.com/yssavchuk

# Pod management.
alias kgp='kubectl get pod'
alias klp='kubectl logs -f'
alias kep='kubectl edit pod'
alias kdesp='kubectl describe pod'
alias kdelp='kubectl delete pods'
alias kex='kubectl exec -it'
kbash() { kubectl exec -it $1 bash; }

# Job management.
alias kgj='kubectl get job'
alias kep='kubectl edit job'
alias kdesp='kubectl describe job'
alias kdelp='kubectl delete job'

# Ingress management.
alias kgi='kubectl get ingress'
alias kei='kubectl edit ingress'
alias kdesi='kubectl describe ingress'
alias kdeli='kubectl delete ingress'

# Service management.
alias kgs='kubectl get svc'
alias kes='kubectl edit svc'
alias kdess='kubectl describe svc'
alias kdels='kubectl delete svc'

# Configmap management.
alias kgc='kubectl get configmap'
alias kec='kubectl edit configmap'
alias kdesc='kubectl describe configmap'
alias kdelc='kubectl delete configmap'

# Secret management
alias kgsec='kubectl get secret'
alias kesec='kubectl edit secret'
alias kdessec='kubectl describe secret'
alias kdelsec='kubectl delete secret'

# Deployment management.
alias kgd='kubectl get deployment'
alias ked='kubectl edit deployment'
alias kdesd='kubectl describe deployment'
alias kdeld='kubectl delete deployment'

